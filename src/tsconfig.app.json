{
  "compileOnSave": true,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "../dist",
    "target": "es5",
    "module": "es2015",
    "baseUrl": "./",
    "mapRoot": "./",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noEmitOnError": true,
    "alwaysStrict": true,
    "removeComments": true,
    "typeRoots": [
      "../node_modules/@types"
    ],
    "types": [
      "angular",
      "node",
      "signalr"
    ],
    "lib": [
      "es2017", "dom"
    ]
  },
  "exclude": [
    "test.ts",
    "**/*.spec.ts"
  ]
}
